@model RentalCars.Models.Car

@{
    ViewData["Title"] = "Create";
}



<div class="container mt-5">
<form id="Car-form" asp-action="Create">
    <h2>Add new car</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <label asp-for="Mark" class="control-label"></label>
            <input asp-for="Mark" class="form-control" />
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Model" class="control-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Gear" class="control-label"></label>
            <select class="form-select" asp-for="Gear">
                <option value="Automatic">Automatic</option>
                <option value="Manual">Manual</option>
            </select>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="ImgUrl" class="control-label"></label>
            <input asp-for="ImgUrl" class="form-control" />
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
                <input type="submit" value="Create" class="btn btn-primary" />
         </div>
    </div>
    <br />
   @*  <div class="row">
            <a asp-action="Index">Back to List</a>
    </div> *@
</form>
</div>

