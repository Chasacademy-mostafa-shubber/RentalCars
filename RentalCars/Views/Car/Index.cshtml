@model IEnumerable<RentalCars.Models.Car>

@{
    ViewData["Title"] = "Index";
}



<div class="container mt-5">
    <a id="Carlist-addButton" class="btn btn-success" asp-action="Create">Add car</a>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Mark</th>
            <th>Model</th>
            <th>Year</th>
            <th>Gear</th>
            <th>Image</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.Mark</td>
            <td>@item.Model</td>
            <td>@item.Year</td>
            <td>@item.Gear</td>
            <td><img src="@item.ImgUrl" style="width:100px; height:70px;" /></td>
            <td>@item.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CarId">Edit</a> |
                       @*  <a asp-action="Details" asp-route-id="@item.CarId">Details</a> | *@
                        <a asp-action="Delete" asp-route-id="@item.CarId">Delete</a>
                    </td>
        </tr>
        }
        
        
    </tbody>
</table>
</div>
