@model IEnumerable<RentalCars.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<div class="container mt-5">
<div class="row">

    @foreach(var item in Model)
{
    <div class="col-md-4">

      
       <div class="card" id="Cars-card">
          <a asp-route-id="@item.CarId">
        <img src="@item.ImgUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5>@item.Mark @item.Model</h5>
           <h5>@item.Year</h5>
           <h5>@item.Gear</h5>
            <h5>@item.Price$/day</h5>
           
        </div>
                    </a>
      </div>
    <br />

    </div>

}
    </div>
</div>