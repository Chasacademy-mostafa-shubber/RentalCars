@model PasswordViewModel

<partial name="~/Views/Account/Settings.cshtml" />
<div class="container mt-5">
    <form method="post" id="Form">

        <h2>Change password</h2>
        <h5>@ViewData["Message"]</h5>
        <hr />
        <div class="row">
            <div class="col">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" aria-required="true" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" aria-required="true" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-danger">Change password</button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

