@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="card" id="register-form">
    
    <img src="~/Images/registerForm-image.jpg" />
    <h1>CREATE ACCOUNT</h1>
    <div class="card-body">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row">
                <div class="col">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control"aria-required="true" />
                
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.Address"></label>
                    <input asp-for="Input.Address" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

            </div>
          
            <div class="row">
                <div class="col">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control"  aria-required="true" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.ZipCode"></label>
                    <input asp-for="Input.ZipCode" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control"  aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-info">Sign up</button>
                </div>
                
            </div>
      </form>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
